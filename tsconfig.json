{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@/types": ["./types/types"],
      "@/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "composite": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
